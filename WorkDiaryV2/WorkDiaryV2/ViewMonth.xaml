<?xml version="1.0" encoding="utf-8" ?>

    
    <ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkDiaryV2.ViewMonth"
             Title="View Month">
        <ContentPage.Resources>
            <ResourceDictionary>
                
            <Style x:Key="gridStyle" TargetType="Grid" >
                <Setter Property="BackgroundColor"
                           Value="LightBlue"/>
            </Style>


            <Style x:Key="lablePlace" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="FillAndExpand" />
                <Setter Property="Grid.Column"
                        Value="0"/>
                <Setter Property="HorizontalTextAlignment"
                        Value="Center"/>
            </Style>

            <Style x:Key="lableDate" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="CenterAndExpand" />
                <Setter Property="Grid.Column"
                        Value="1"/>

            </Style>

            <Style x:Key="lableHours" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="CenterAndExpand" />
                <Setter Property="Grid.Column"
                        Value="2"/>
                <Setter Property="HorizontalTextAlignment"
                        Value="Center"/>
            </Style>

            <Style x:Key="labelTasks" TargetType="Label">
                <Setter Property="HorizontalOptions"
                        Value="FillAndExpand" />
                <Setter Property="VerticalOptions"
                        Value="FillAndExpand" />
                <Setter Property="Grid.Row"
                        Value="1"/>
                <Setter Property="FontSize"
                        Value="Micro"/>
                <Setter Property="VerticalOptions"
                        Value="Center"/>
                <Setter Property="HorizontalTextAlignment"
                        Value="Center"/>

            </Style>


        </ResourceDictionary>
        </ContentPage.Resources>
    <ContentPage.Content>


        <StackLayout>
            <StackLayout x:Name="MainContent" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="5">


                <Grid>
                    <Label Grid.Column="0" Text="Place" VerticalOptions="Center" FontSize="Small" Padding="3" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="1" Text="Date" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Small" Padding="3" HorizontalTextAlignment="Center"/>
                    <Label Grid.Column="2" Text="Hours" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Small" Padding="3" HorizontalTextAlignment="Center"/>
                </Grid>









        </StackLayout>
            <Button Text="Delete all" Clicked="Delete_All"/>
        </StackLayout>

















